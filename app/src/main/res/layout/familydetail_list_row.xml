<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="5dp"
    android:paddingTop="10dp">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/iv_fd_profile_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_person_orange_24dp"
        app:civ_border_width="1dp"
        app:civ_border_color="#ff9900"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="5dp">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/Black"
            android:gravity="left"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/tv_relation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Black"
            android:gravity="left"
            android:textStyle=""
            android:layout_marginLeft="5dp"
            />
    </LinearLayout>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp">


            <TextView
                android:id="@+id/tv_phrcnoo"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:textColor="@color/Black"
                android:gravity="left"
                android:text="Member ID"
                />

            <TextView
                android:id="@+id/tv_aadharnoo"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:textColor="@color/Black"
                android:gravity="left"
                android:text="Aadhar No."
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="5dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=":"
                android:textColor="@color/Black"

                />

            <TextView
                android:text=":"
                android:layout_width="5dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textColor="@color/Black"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="5dp">

            <TextView
                android:id="@+id/tv_phrcno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/Black"

                />

            <TextView
                android:id="@+id/tv_aadharno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textColor="@color/Black"
                />

            <TextView
                android:id="@+id/tv_showdetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textColor="@color/DodgerBlue"
                android:textStyle="bold"
                android:text="  Show Details  "

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="right"
            android:layout_marginLeft="15dp"
            android:foregroundGravity="center_vertical">
            <TextView
                android:id="@+id/tv_hof"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="#ff9900"
                android:text="HoF"
                android:visibility="invisible"
                />
            <TextView
                android:id="@+id/tv_ageandgender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/Black"
                />
            <ImageView
                android:id="@+id/iv_eye"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_eye_icon_24dp"
                android:gravity="right"
                android:textColor="@color/Black"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="right"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:foregroundGravity="center_vertical">
            <TextView
                android:id="@+id/tv_hofn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="#ff9900"
                android:text="HoFN"
                android:visibility="invisible"
                />
            <TextView
                android:id="@+id/tv_ageandgenderblank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/Black"
                />
            <ImageView
                android:id="@+id/iv_verifiednotverified"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_lens_red_24dp"
                android:gravity="right"
                android:textColor="@color/Black"
                />
            <TextView
                android:id="@+id/tv_verifyornotverify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textColor="@color/SlateGray"
                android:textStyle="italic"
                android:textSize="10sp"
                />

        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
